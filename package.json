{
  "name": "scheduler-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development NEXT_DISABLE_TURBOPACK=1 NEXT_PRIVATE_DISABLE_TURBOPACK=1 next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "restart-dev": "pkill -f \"next dev\" || true && rm -rf .next && npm run dev",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:phase1": "ENFORCE_PHASE1_COVERAGE=true jest --coverage --runInBand",
    "test:coverage:phase2": "ENFORCE_PHASE2_COVERAGE=true jest --coverage --runInBand",
    "test:coverage:phase3": "ENFORCE_PHASE3_COVERAGE=true jest --coverage --runInBand",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:smoke": "playwright test --grep @smoke",
    "test:all": "npm run test -- --runInBand && npm run test:e2e:smoke",
    "test:db:reset": "node scripts/testing/db-reset.mjs",
    "test:db:seed": "node scripts/testing/db-seed.mjs",
    "qa:smoke": "npm run test:e2e:smoke",
    "qa:audit": "npm run test -- lib/audit/__tests__/validateAuditLog.test.ts",
    "qa:e2e": "npm run test:e2e",
    "prepare": "husky",
    "supabase": "supabase",
    "db:push": "supabase db push",
    "db:reset": "supabase db reset",
    "test:migration": "node scripts/test-school-id-migration.js"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.89.0",
    "@tanstack/react-query": "^5.90.19",
    "@tanstack/react-query-devtools": "^5.91.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cookie": "^1.1.1",
    "lucide-react": "^0.562.0",
    "next": "^16.1.6",
    "puppeteer": "^22.15.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "^7.69.0",
    "react-remove-scroll": "^2.6.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@babel/core": "^7.29.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.27",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.24",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.0.0",
    "eslint-config-next": "^16.1.6",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^3.4.19",
    "typescript": "^5"
  }
}
